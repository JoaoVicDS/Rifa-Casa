@model IndexViewModel
@{
    ViewData["Title"] = "Rifa do Sonho";
}

<div class="container mt-4">
    <!-- Título e Descrição -->
    <div class="text-center mb-5">
        <h1>Rifa do Sonho da Casa Própria</h1>
        <p>Participe da rifa e concorra a prêmios incríveis!</p>
    </div>

    <!-- Prêmios -->
    <div class="row text-center mb-5">
        <div class="col-md-4"><h4>1º Prêmio</h4><p>Descrição</p></div>
        <div class="col-md-4"><h4>2º Prêmio</h4><p>Descrição</p></div>
        <div class="col-md-4"><h4>3º Prêmio</h4><p>Descrição</p></div>
    </div>

    <h2 class="my-4 text-center">Selecione suas Rifas</h2>

    <form id="formRaffles" method="post" asp-controller="Compra" asp-action="DadosUsuario">
        <div class="row row-cols-5 g-2">
            @foreach (var raffle in Model.Raffles)
            {
                <div class="col">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="rifaIds" value="@raffle.Id" id="raffle_@raffle.Id" @(raffle.Available ? "" : "disabled")>
                        <label class="form-check-label @(raffle.Available ? "" : "text-danger")" for="rifa_@raffle.Id">
                            @raffle.Number
                        </label>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4 text-center">
            <button type="submit" class="btn btn-primary">Continuar para pagamento</button>
        </div>
    </form>

    <nav class="mt-5 d-flex justify-content-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageCurrent ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>

</div>
